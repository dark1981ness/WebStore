@model IEnumerable<WebStore.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<div class="container">

    <h3>Сотрудники</h3>

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>Отчество</th>
                <th>Карточка</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.LastName</td>
                    <td>@employee.FirstName</td>
                    <td>@employee.Patronymic</td>
                    <td><a href="~/Home/EmployeeCard/@employee.Id">Детали</a></td>
                </tr>
            }
        </tbody>
    </table>

    <p>
        <a asp-controller="Home" asp-action="Index">Домой</a>
    </p>

</div>